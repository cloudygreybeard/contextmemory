{
  "name": "contextmemory",
  "displayName": "ContextMemory",
  "description": "Clean, simple, file-based session context management for LLM development workflows",
  "version": "0.7.0",
  "publisher": "cloudygreybeard",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudygreybeard/contextmemory"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Education"
  ],
  "keywords": [
    "memory",
    "context",
    "conversation",
    "chat",
    "notes",
    "productivity",
    "ai",
    "cursor",
    "cmctl",
    "file-based"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextmemory.reloadChatMemory",
        "title": "Reload Previous Chat",
        "category": "ContextMemory",
        "icon": "$(history)"
      },
      {
        "command": "contextmemory.createMemoryFromChat",
        "title": "Capture Current Chat",
        "category": "ContextMemory",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "contextmemory.refreshMemories",
        "title": "Refresh Memories",
        "category": "ContextMemory",
        "icon": "$(refresh)"
      },
      {
        "command": "contextmemory.openMemory",
        "title": "Open Memory",
        "category": "ContextMemory",
        "icon": "$(eye)"
      },
      {
        "command": "contextmemory.health",
        "title": "Check Health",
        "category": "ContextMemory",
        "icon": "$(pulse)"
      },
      {
        "command": "contextmemory.editMemory",
        "title": "Edit Memory",
        "category": "ContextMemory",
        "icon": "$(edit)"
      },
      {
        "command": "contextmemory.deleteMemory",
        "title": "Delete Memory",
        "category": "ContextMemory",
        "icon": "$(trash)"
      },
      {
        "command": "contextmemory.duplicateMemory",
        "title": "Duplicate Memory",
        "category": "ContextMemory",
        "icon": "$(copy)"
      }
    ],
    "views": {
      "contextmemory": [
        {
          "id": "contextmemory.memories",
          "name": "Memories",
          "when": "true",
          "icon": "$(notebook)",
          "contextualTitle": "ContextMemory"
        }
      ],
      "explorer": [
        {
          "id": "contextmemory.memoriesInExplorer",
          "name": "Session Context",
          "when": "config.contextmemory.showInExplorer == true",
          "icon": "$(notebook)",
          "contextualTitle": "Session Context"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextmemory",
          "title": "ContextMemory",
          "icon": "$(notebook)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "contextmemory.createMemoryFromChat"
        },
        {
          "command": "contextmemory.refreshMemories"
        },
        {
          "command": "contextmemory.health"
        }
      ],
      "editor/context": [
        {
          "command": "contextmemory.createMemoryFromChat",
          "when": "resourceExtname == .md",
          "group": "contextmemory@1"
        }
      ],
      "view/title": [
        {
          "command": "contextmemory.createMemoryFromChat",
          "when": "view == contextmemory.memories || view == contextmemory.memoriesInExplorer",
          "group": "navigation@1"
        },
        {
          "command": "contextmemory.refreshMemories",
          "when": "view == contextmemory.memories || view == contextmemory.memoriesInExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "contextmemory.openMemory",
          "when": "(view == contextmemory.memories || view == contextmemory.memoriesInExplorer) && viewItem == memory",
          "group": "navigation@1"
        },
        {
          "command": "contextmemory.editMemory",
          "when": "(view == contextmemory.memories || view == contextmemory.memoriesInExplorer) && viewItem == memory",
          "group": "edit@1"
        },
        {
          "command": "contextmemory.duplicateMemory",
          "when": "(view == contextmemory.memories || view == contextmemory.memoriesInExplorer) && viewItem == memory",
          "group": "edit@2"
        },
        {
          "command": "contextmemory.deleteMemory",
          "when": "(view == contextmemory.memories || view == contextmemory.memoriesInExplorer) && viewItem == memory",
          "group": "destructive@1"
        }
      ]
    },
    "configuration": {
      "title": "ContextMemory",
      "properties": {
        "contextmemory.cliPath": {
          "type": "string",
          "default": "cmctl",
          "description": "Path to the cmctl CLI binary"
        },
        "contextmemory.storageDir": {
          "type": "string",
          "default": "",
          "description": "Custom storage directory (defaults to ~/.contextmemory)"
        },
        "contextmemory.provider": {
          "type": "string",
          "default": "file",
          "enum": [
            "file",
            "s3",
            "gcs",
            "remote"
          ],
          "description": "Storage provider to use"
        },
        "contextmemory.verbosity": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 2,
          "description": "CLI verbosity level (0=quiet, 1=normal, 2=verbose)"
        },
        "contextmemory.autoSuggestLabels": {
          "type": "boolean",
          "default": true,
          "description": "Automatically suggest labels when creating memories"
        },
        "contextmemory.defaultLabels": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Default labels to apply to new memories"
        },
        "contextmemory.showMemoryIds": {
          "type": "boolean",
          "default": false,
          "description": "Show memory IDs when listing memories"
        },
        "contextmemory.showInExplorer": {
          "type": "boolean",
          "default": false,
          "description": "Show ContextMemory panel in Explorer sidebar instead of dedicated sidebar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "install-extension": "code --install-extension contextmemory-0.6.0.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.19.127",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.9.2"
  }
}
